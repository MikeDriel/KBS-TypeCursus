<UserControl x:Class="WPF_Visualize.ResultatenOefening"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Visualize" xmlns:local1="clr-namespace:WPF_Visualize.Views_Statistics"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="AntiqueWhite"
             Style="{StaticResource UserControlBackground}">

    <UserControl.DataContext>
        <local1:Charts/>
    </UserControl.DataContext>



    <Grid>

        <oxy:PlotView Model="{Binding Stats}" Margin="400,149,69,78"/>

        <Button x:Name="Back" Content="Terug naar opdrachten" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="130" Margin="10,10,0,0"/>

        <Label Content="Woorden per seconde:&#xD;&#xA;" HorizontalAlignment="Left" Margin="48,149,0,0" VerticalAlignment="Top"/>
        <Label Content="Meest voorkomen fouten:&#xD;&#xA;" HorizontalAlignment="Left" Margin="45,335,0,0" VerticalAlignment="Top"/>
        <Label Content="Resultaat opdracht" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Label Content="Aantal fouten:" HorizontalAlignment="Left" Margin="48,255,0,0" VerticalAlignment="Top"/>


        <Label x:Name="WPS" Content="WPS" HorizontalAlignment="Left" Margin="258,149,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Fouten" Content="Fouten" HorizontalAlignment="Left" Margin="182,255,0,0" VerticalAlignment="Top"/>
        <Label x:Name="MVF" Content="MVF" HorizontalAlignment="Left" Margin="288,335,0,0" VerticalAlignment="Top"/>




    </Grid>


</UserControl>
