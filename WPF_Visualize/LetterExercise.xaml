<UserControl x:Name="UserControl" x:Class="WPF_Visualize.LetterExercise"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Visualize"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            
        </Grid.ColumnDefinitions>
        <Label x:Name="LettersDoneLabel6" Grid.Column="0" Grid.Row="1" FontSize="48"/>
        <Label x:Name="LettersDoneLabel5" Grid.Column="1" Grid.Row="1" FontSize="48"/>
        <Label x:Name="LettersDoneLabel4" Grid.Column="2" Grid.Row="1" FontSize="48"/>
        <Label x:Name="LettersDoneLabel3" Grid.Column="3" Grid.Row="1" FontSize="48"/>
        <Label x:Name="LettersDoneLabel2" Grid.Column="4" Grid.Row="1" FontSize="48"/>
        <Label x:Name="LettersDoneLabel1" Grid.Column="5" Grid.Row="1" FontSize="48"/>
        <Label x:Name="LetterTypedLabel" Grid.Column="6" Grid.Row="1" FontSize="48" BorderBrush="Black" BorderThickness="3"/>
        <Label x:Name="LettersTodoLabel" Grid.Column="7" Grid.Row="1" FontSize="48" Grid.ColumnSpan="6" Margin="0,0,10,0"/>
    </Grid>
</UserControl>
